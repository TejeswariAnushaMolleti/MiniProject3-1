<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logo_bg"
    tools:context=".entercode">


    //edit text to enter id-number
    <EditText
        android:id="@+id/idn"
        android:layout_width="342dp"
        android:layout_height="85dp"
        android:hint="ID Number"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/tve" />

    //edit text to enter code generated by faculty to mark attendance
    <EditText
        android:id="@+id/encode"
        android:layout_width="342dp"
        android:layout_height="85dp"
        android:hint="ENTER CODE"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:background="@drawable/tve" />

    //submit button to mark attendance
    <Button
        android:id="@+id/bts"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"
        android:layout_width="342dp"
        android:layout_height="64dp"
        android:text="Submit"
        android:textColor="#fff"
        android:background="@drawable/btne"/>

    //button to get percentage of attendance of student
    <Button
        android:id="@+id/per"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"
        android:layout_width="342dp"
        android:layout_height="64dp"
        android:text="get percentage"
        android:onClick="percet"
        android:background="@drawable/resetbtn"/>
    <Button
        android:id="@+id/signout"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"
        android:layout_width="342dp"
        android:layout_height="64dp"
        android:text="so"
        android:onClick="signoutt"
        android:background="@drawable/resetbtn"/>

</LinearLayout>