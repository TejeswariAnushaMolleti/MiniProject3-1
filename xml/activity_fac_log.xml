<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".facLog">

    //imageview for logo
    <ImageView
        android:contentDescription="image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        tools:ignore="HardcodedText" />

    //title ams
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:paddingStart="45dp"
        android:text="ATTENDANCE MANAGEMENT SYSTEM"
        android:textSize="18sp"
        android:textColor="#5ba7d9"
        tools:ignore="HardcodedText,RtlSymmetry" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="20dp">

        //text view for email
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="EMAIL"
            android:textSize="13sp"
            android:textColor="#5C5454"
            tools:ignore="HardcodedText" />

        //edit text for email field
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tve"
            android:hint="Enter your email"
            android:paddingStart="15dp"
            android:id="@+id/et_fmail"
            android:textColor="#5C5454"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TextFields" />

        //text view for password
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="PASSWORD"
            android:textSize="13sp"
            android:textColor="#5C5454"
            tools:ignore="HardcodedText" />

        //edit text for password field
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/tve"
            android:hint="Enter your password"
            android:paddingStart="15dp"
            android:id="@+id/et_fpass"
            android:textColor="#5C5454"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TextFields" />

        //text view for forgot password
        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_marginTop="5dp"
            android:layout_gravity="end"
            android:clickable="true"
            tools:ignore="HardcodedText" />

        //buton for log-in
        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btne"
            android:text="Log In"
            android:id="@+id/bt_fsubmit"
            android:textColor="#fff"
            tools:ignore="HardcodedText,OnClick"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            //text view "new member?"
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Member?"
                tools:ignore="HardcodedText"/>

            //button to go to sign-up layout
            <Button
                android:id="@+id/signup"
                android:onClick="signupfac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginStart="4dp"
                android:textColor="#5ba7d9"
                android:text="Sign Up"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>