    <EditText
        android:id="@+id/subject"
        android:layout_width="342dp"
        android:layout_height="89dp"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:hint="enter subject code"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp" />

    //edit text to display generated code
    <EditText
        android:id="@+id/txt"
        android:layout_width="342dp"
        android:layout_height="89dp"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/tve" />

    //button to generate a code
    <Button
        android:id="@+id/gen"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="342dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="Generate Code"
        android:textColor="#fff"
        android:background="@drawable/btne"/>

    //button to reset the generated code
    <Button
        android:onClick="add_students"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="342dp"
        android:layout_height="64dp"
        android:text="Add_Attendance"
        android:textColor="#5ba7d9"
        android:background="@drawable/resetbtn"/>

    //button to go to the get records layout
    <Button
        android:onClick="getrec"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="342dp"
        android:layout_height="64dp"
        android:text="Get records"
        android:textColor="#5ba7d9"
        android:background="@drawable/resetbtn"/>

    //button to go to the get percentage of students layout
    <Button
        android:onClick="getper"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="342dp"
        android:layout_height="64dp"
        android:text="Get_Percentage"
        android:textColor="#5ba7d9"
        android:background="@drawable/resetbtn"/>


</LinearLayout>