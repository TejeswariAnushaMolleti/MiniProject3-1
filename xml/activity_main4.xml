<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_bg"
    android:layout_centerInParent="true"
    tools:context=".Main4Activity"
    android:orientation="vertical">

    //image for look and feel
    <ImageView
        android:contentDescription="an image of girl"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/girl"
        android:layout_gravity="center"
        tools:ignore="HardcodedText" />

    //layout for the important things
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">

        //textview for the full name
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5C5454"
            android:text="FULL NAME"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            tools:ignore="HardcodedText" />

        //edit text to enter name of the user
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tve"
            android:hint="Enter your name"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="#5C5454"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

        //text view for the id number
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="ID NUMBER"
            android:textColor="#5C5454"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        //edit text to enter id number
        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tve"
            android:hint="Enter your ID Number"
            android:paddingStart="15dp"
            android:textColor="#5C5454"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />

        //text view for the class
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="CLASS"
            android:textColor="#5C5454"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        //edit text to enter the class
        <EditText
            android:id="@+id/et_class"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tve"
            android:hint="Enter your class"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="#5C5454"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry" />

        //text view for the email
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="EMAIL"
            android:textColor="#5C5454"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        //edit text for the email field
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tve"
            android:hint="Enter your email"
            android:paddingStart="15dp"
            android:textColor="#5C5454"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TextFields" />

        //text view diaplaying password
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="PASSWORD"
            android:textColor="#5C5454"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        //edit text for password field
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tve"
            android:hint="Enter your password"
            android:paddingStart="15dp"
            android:textColor="#5C5454"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TextFields" />

        //text view for the confirm password
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="CONFIRM_PASSWORD"
            android:textSize="13sp"
            android:textColor="#5C5454"
            tools:ignore="HardcodedText" />

        //edit text for the comfirm password field
        <EditText
            android:id="@+id/et_confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/tve"
            android:hint="Enter your password"
            android:paddingStart="15dp"
            android:textColor="#5C5454"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TextFields" />

        //button to register
        <Button
            android:id="@+id/et_button"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btne"
            android:text="Create Account"
            android:textColor="#fff"
            tools:ignore="HardcodedText" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            //text view to ask if existing member
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="Existing Member?  "
                android:textColor="#5C5454"
                tools:ignore="HardcodedText,RtlHardcoded" />

            //button to go to sign in layout if already existing member
            <TextView
                android:onClick="sign"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:text="@string/link"
                android:textColor="#5ba7d9" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>